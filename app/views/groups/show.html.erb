<!-- app/views/groups/show.html.erb -->
<h1><%= @group.name %> Transactions</h1>

<p>Icon: <%= @group.icon %></p>
<p>Total Amount: <%= @purchases.sum(:amount) %></p>

<!-- Display purchases for this group -->
<% @purchases.each do |purchase| %>
  <div>
    <h3><%= purchase.name %></h3>
    <p>Amount: <%= purchase.amount %></p>
  </div>
<% end %>

<%= link_to 'Back to Groups', groups_path %>
<%= link_to 'Add a new transaction', new_group_purchase_path(@group) %>
